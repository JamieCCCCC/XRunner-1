<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="20dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="20dp"
    android:background="@color/transparent">
    <TextView
        android:id="@+id/distance"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/panel"
        android:text="DISTANCE"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textColor="#FFFFFF" />
    <TextView
        android:id="@+id/distance_edit"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_below="@+id/distance"
        android:layout_alignLeft="@+id/distance"
        android:background="@drawable/panel"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textColor="#FFFFFF" />
    <TextView
        android:id="@+id/sting1"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:background="@drawable/sting_radius"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp" />
    <TextView
        android:id="@+id/duration"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_below="@+id/distance_edit"
        android:layout_alignLeft="@+id/distance"
        android:layout_marginTop="5dp"
        android:background="@drawable/panel"
        android:text="DURATION"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textColor="#FFFFFF"/>
    <TextView
        android:id="@+id/duration_edit"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_below="@+id/duration"
        android:layout_alignLeft="@+id/duration"
        android:background="@drawable/panel"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textColor="#FFFFFF" />
    <TextView
        android:id="@+id/sting2"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:background="@drawable/sting_radius"
        android:layout_below="@+id/distance_edit"
        android:layout_alignLeft="@+id/distance"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp" />
    <TextView
        android:id="@+id/calorie"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_below="@+id/duration_edit"
        android:layout_alignLeft="@+id/duration_edit"
        android:layout_marginTop="5dp"
        android:background="@drawable/panel"
        android:text="CALORIE"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textColor="#FFFFFF"/>
    <TextView
        android:id="@+id/calorie_edit"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_below="@+id/calorie"
        android:layout_alignLeft="@+id/calorie"
        android:background="@drawable/panel"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textColor="#FFFFFF" />
    <TextView
        android:id="@+id/sting3"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:background="@drawable/sting_radius"
        android:layout_below="@+id/duration_edit"
        android:layout_alignLeft="@+id/duration"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp" />
    <Button
        android:id="@+id/finish"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:background="@drawable/start_radius"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:layout_centerInParent="true"
        android:textColor="#FFFFFF"
        android:text="FINISH"
        android:textStyle="bold"
        android:textSize="25dp"
        android:textAlignment="center"/>
</RelativeLayout>
